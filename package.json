{
  "name": "learning-platform",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "gen": "graphql-codegen --config codegen.yml && yarn lint",
    "dev": "cross-env NODE_OPTIONS=\"-r esm\" next",
    "build": "cross-env NODE_OPTIONS=\"-r esm\" next build",
    "analyze": "cross-env-shell NODE_OPTIONS=\"-r esm\" ANALYZE=true next build",
    "start": "cross-env NODE_OPTIONS=\"-r esm\" next start",
    "check-types": "tsc",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-types check-format lint build"
  },
  "dependencies": {
    "@ant-design/icons": "^4.1.0",
    "@next/bundle-analyzer": "^9.4.0",
    "@zeit/next-less": "^1.0.1",
    "antd": "4.2.2",
    "antd-dayjs-webpack-plugin": "1.0.0",
    "babel-plugin-import": "1.13.0",
    "cookie": "^0.4.1",
    "cross-env": "^7.0.2",
    "dayjs": "1.8.26",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "graphql": "^15.0.0",
    "highlight.js": "^10.0.3",
    "isomorphic-unfetch": "^3.0.0",
    "js-cookie": "^2.2.1",
    "less": "^3.11.1",
    "less-loader": "5.0.0",
    "less-vars-to-js": "^1.3.0",
    "markdown-it": "^10.0.0",
    "markdown-it-container": "^2.0.0",
    "markdown-it-ins": "^3.0.0",
    "next": "9.4.0",
    "next-compose-plugins": "2.2.0",
    "next-urql": "^0.3.8",
    "nprogress": "^0.2.0",
    "null-loader": "^4.0.0",
    "postcss-preset-env": "^6.7.0",
    "react": "16.13.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "16.13.1",
    "react-ga": "^2.7.0",
    "react-idle-timer": "^4.2.12",
    "react-is": "^16.13.1",
    "react-keyboard-event-handler": "^1.5.4",
    "react-markdown-editor-lite": "^1.1.2",
    "slugify": "^1.4.0",
    "url-join": "^4.0.1",
    "urql": "^1.9.7"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.3",
    "@graphql-codegen/typescript": "1.13.5",
    "@graphql-codegen/typescript-document-nodes": "1.13.5",
    "@graphql-codegen/typescript-graphql-files-modules": "1.13.5",
    "@graphql-codegen/typescript-operations": "1.13.5",
    "@types/cookie": "^0.4.0",
    "@types/highlight.js": "^9.12.3",
    "@types/js-cookie": "^2.2.6",
    "@types/markdown-it": "^10.0.1",
    "@types/markdown-it-container": "^2.0.2",
    "@types/node": "^14.0.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.35",
    "@types/react-beautiful-dnd": "^12.1.2",
    "@types/url-join": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "2.33.0",
    "@typescript-eslint/parser": "2.33.0",
    "babel-eslint": "10.x",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.2",
    "husky": ">=4",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "serverless-next.js": "^1.11.1-alpha.0",
    "typescript": "^3.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run check-types && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "yarn run lint"
    ],
    "*.+(js|json|ts|tsx)": [
      "yarn run format"
    ]
  }
}
